<UserControl x:Class="WpfApp2.GroupCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp2"
             mc:Ignorable="d" d:DesignWidth="162" BorderBrush="Black" BorderThickness="0" Height="255">
    <Button Command="{Binding Path=ButtonClicked}" BorderThickness="1" Background="#FFCBCBCB">
        <Grid Height="255" Width="162">
            <!-- Image Source="{Binding Path=Image}" Margin="2,5,2,118"/-->
            <TextBlock Text="{Binding Path=Title}" FontSize="20" FontStyle="Italic" TextAlignment="Center" Margin="10,130,10,70" TextWrapping="Wrap"/>
            <!--Label Content="Горячие напитки" FontSize="20" FontStyle="Italic" HorizontalContentAlignment="Center" Margin="10,130,10,75"/-->
            <Label Content="{Binding Path=Sign}" FontSize="50" FontWeight="Black" Foreground="#FF232323" HorizontalContentAlignment="Center" Margin="10,160,10,20"/>
            <Label Content="{Binding Path=Count}" FontSize="10" FontWeight="Bold" Foreground="#FF8D8D8D" HorizontalContentAlignment="Center" Margin="10,220,10,10"/>
        </Grid>
    </Button>
</UserControl>
